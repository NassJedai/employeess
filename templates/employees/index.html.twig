{% extends 'base.html.twig' %}

{% block title %}Hello EmployeesController!{% endblock %}

{% block body %}

    <a href="{{ path('app_employees_nouveau')}}" class="btn btn-primary">
        Créer un employee
    </a>

    {% for message in app.flashes('success') %}
        <div class="alert alert-success">
            {{ message }}
        </div>
    {% endfor %}

    <table class="table table-hover">
        <thead>
        <tr>
            <th scope="col">Nom</th>
            <th scope="col">Prénom</th>
            <th scope="col">Sexe</th>
            <th scope="col">Date de naissance</th>
            <th scope="col">Date d'embauche</th>
            <th scope="col">Modifier</th>
            <th scope="col">Supprimer</th>
        </tr>
        </thead>
        <tbody>

{% for employee in employees %}


        <tr class="table-secondary">
            <th scope="row">{{ employee.lastName }}</th>
            <td>{{ employee.firstName }}</td>
            <td>{{ employee.gender }}</td>
            <td>{{ employee.birthDate | date('d-m-Y') }}</td>
            <td>{{ employee.hireDate | date('d-m-Y') }}</td>
            <td><a href="{{ path('employee.edit', {"id" : employee.id}) }}" class="btn btn-success">Modifier</a></td>
            <td><a href="{{ path('employee.delete', {"id" : employee.id}) }}" class="btn btn-primary">Supprimer</a></td>
        </tr>

{% endfor %}

    </tbody>
    </table>

{% endblock %}
